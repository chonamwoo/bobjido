{
  "name": "bobmap",
  "version": "1.0.0",
  "description": "맛집 플레이리스트를 만들고 공유하는 소셜 플랫폼",
  "main": "electron-main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/scripts/seedData.js",
    "seed:force": "node server/scripts/seedData.js --force",
    "electron": "electron .",
    "electron-dev": "set NODE_ENV=development && electron .",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac"
  },
  "keywords": [
    "food",
    "playlist",
    "social",
    "map"
  ],
  "author": "BobMap Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-kakao": "^1.0.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.bobmap.app",
    "productName": "Bob's Map",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "client/build/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "client/public/images/logo-icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "client/public/images/logo-icon.png"
    }
  }
}
